{
  "cleanUrls": true,
  "framework": "remix",
  "headers": [
    {
      "headers": [
        {
          "key": "Cache-Control",
          "value": "max-age=300, s-maxage=31556952"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(), geolocation=()"
        },
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self'; script-src 'self' 'unsafe-inline' https://cpwebassets.codepen.io https://public.codepenassets.com https://vercel.live; style-src 'self' 'unsafe-inline'; img-src 'self' https://res.cloudinary.com data: blob:; font-src 'self' data:; connect-src 'self' https://res.cloudinary.com https://vitals.vercel-insights.com https://api.buttondown.email wss://ws-us3.pusher.com https://sockjs-us3.pusher.com https://vercel.live; frame-src 'self' https://vercel.live https://codepen.io; object-src 'none'; base-uri 'self'; form-action 'self';"
        }
      ],
      "source": "/(.*)"
    },
    {
      "headers": [
        {
          "key": "Cache-Control",
          "value": "max-age=86400"
        }
      ],
      "source": "/manifest.webmanifest.json"
    },
    {
      "headers": [
        {
          "key": "Cache-Control",
          "value": "max-age=604800"
        }
      ],
      "source": "/articles/(.*)"
    },
    {
      "headers": [
        {
          "key": "Cache-Control",
          "value": "max-age=31556952"
        }
      ],
      "source": "/images/(.*)"
    },
    {
      "headers": [
        {
          "key": "Cache-Control",
          "value": "max-age=31556952"
        }
      ],
      "source": "/build/(.*)"
    },
    {
      "source": "/fonts/(.*).woff2",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "images": {
    "contentDispositionType": "inline",
    "contentSecurityPolicy": "script-src 'none'; frame-src 'none'; sandbox;",
    "dangerouslyAllowSVG": false,
    "formats": ["image/webp"],
    "minimumCacheTTL": 60,
    "sizes": [256, 640, 1080, 2048, 3840]
  },
  "trailingSlash": false
}
